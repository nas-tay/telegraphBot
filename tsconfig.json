{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build/src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "resolveJsonModule": true
  }
}
